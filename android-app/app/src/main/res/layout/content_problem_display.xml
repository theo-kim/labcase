<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paperBack">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_bottom_margin"
            android:orientation="vertical">

            <!--Problem-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/card_padding_horizontal"
                android:paddingRight="@dimen/card_padding_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/prob_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Experimental Question"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/text_size_title"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_black_24dp"
                        android:gravity="right"
                        android:id="@+id/prob_info"
                        android:background="@color/white"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/dividerColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How does barometric pressure affect ambient temperature?"
                    android:id="@+id/prob_descrip"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="@dimen/text_size_label"/>
            </LinearLayout>

            <!--Independent variable-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/card_padding_horizontal"
                android:paddingRight="@dimen/card_padding_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/indep_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Independent Variable"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/text_size_title"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_black_24dp"
                        android:gravity="right"
                        android:id="@+id/indep_info"
                        android:background="@color/white"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/dividerColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description of the Independent Variable"
                    android:id="@+id/indep_descrip"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="@dimen/text_size_label"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Barometric Pressure"
                            android:gravity="center"
                            android:id="@+id/indep_value"
                            android:textSize="@dimen/text_size_subsensor"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/indep_sensor"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_description"
                            android:text="BMP180"
                            android:layout_marginTop="@dimen/activity_vertical_margin"/>
                    </LinearLayout>
                    <View
                        android:layout_height="match_parent"
                        android:layout_width="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/dividerColor"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="atm"
                            android:gravity="center"
                            android:id="@+id/indep_unit"
                            android:textSize="@dimen/text_size_sensor"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="atmospheres"
                            android:id="@+id/indep_unit_full"
                            android:textSize="@dimen/text_size_description"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--Independent variable-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/card_padding_horizontal"
                android:paddingRight="@dimen/card_padding_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/dep_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Dependent Variable"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/text_size_title"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_black_24dp"
                        android:gravity="right"
                        android:id="@+id/dep_info"
                        android:background="@color/white"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/dividerColor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description of the dependent variable"
                    android:id="@+id/dep_descrip"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="@dimen/text_size_label"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_margin">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:gravity="center"
                            android:id="@+id/dep_value"
                            android:textSize="@dimen/text_size_subsensor"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dep_sensor"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_description"
                            android:text="DHT20"
                            android:layout_marginTop="@dimen/activity_vertical_margin"/>
                    </LinearLayout>
                    <View
                        android:layout_height="match_parent"
                        android:layout_width="1dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/dividerColor"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\u00B0C"
                            android:gravity="center"
                            android:id="@+id/dep_unit"
                            android:textSize="@dimen/text_size_sensor"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="degrees Celsius"
                            android:id="@+id/dep_unit_full"
                            android:textSize="@dimen/text_size_description"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>