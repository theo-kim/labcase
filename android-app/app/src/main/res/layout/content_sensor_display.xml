<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sensor_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paperBack"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.b2ktechnology.multicorder.SensorDisplay"
    tools:showIn="@layout/activity_sensor_display">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_bottom_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/main">

            <!--Number of Trials-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/card_padding_horizontal"
                android:paddingRight="@dimen/card_padding_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_black_24dp"
                        android:gravity="right"
                        android:id="@+id/trial_info"
                        android:background="@color/white"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="26dp"
                    android:paddingLeft="10dp">
                    <TextView
                        android:id="@+id/prob_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Trials"
                        android:textSize="@dimen/text_size_subsensor"/>
                    <View android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:background="@color/dividerColor"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_subsensor"
                        android:gravity="center"
                        android:text="7"/>
                </LinearLayout>
            </LinearLayout>

            <!--Procedure-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/card_padding_horizontal"
                android:paddingRight="@dimen/card_padding_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/procedure_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Procedure"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/text_size_title"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_black_24dp"
                        android:gravity="right"
                        android:id="@+id/procedure_info"
                        android:background="@color/white"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/dividerColor"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/procedure">
                </ListView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
